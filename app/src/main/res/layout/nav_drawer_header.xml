<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/android_material_2"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="24dp"
    android:gravity="bottom"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="205dp"
        android:layout_height="92dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:id="@+id/img_header_bloodUnit"
            android:src="@drawable/profile_details_3"
            android:layout_gravity="center_horizontal"
            android:baselineAlignBottom="false"
            android:layout_alignTop="@+id/img_header_profile_picture"
            android:layout_alignStart="@+id/img_header_profile_picture"
            android:layout_marginStart="30dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:id="@+id/img_header_blood_group"
            android:src="@drawable/profile_details_3"
            android:layout_alignTop="@+id/img_header_bloodUnit"
            android:layout_alignEnd="@+id/img_header_profile_picture"
            android:layout_marginEnd="30dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="72dp"
            android:id="@+id/img_header_profile_picture"
            android:src="@drawable/imageedit_2_8981205709"
            android:layout_gravity="center_horizontal"
            android:baselineAlignBottom="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4Units"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img_header_blood_group"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="O+ve"
            android:id="@+id/textView4"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/img_header_bloodUnit" />
    </RelativeLayout>

    <TextView
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Vignesh Mailappan"
        android:textColor="#FFFFFF"
        android:id="@+id/txt_header_user_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Donated on : 20/1/2016"
        android:textColor="#FFFFFF"
        android:id="@+id/txt_header_last_donated"/>

</LinearLayout>