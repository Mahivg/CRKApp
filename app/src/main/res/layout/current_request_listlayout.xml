<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/current_request_listlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_request_user"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="3dp"
        android:layout_gravity="center"
        android:src="@drawable/user" />


    <LinearLayout
        android:id="@+id/linear_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:padding="1dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_request_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black"
            android:textSize="15dp"
            android:padding="1dp"/>
        <TextView
            android:id="@+id/txt_request_blood_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Unit Blood"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:padding="1dp"/>
        <TextView
            android:id="@+id/txt_request_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9566824544"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:padding="1dp"/>

        <TextView
            android:id="@+id/txt_request_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chennai"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:padding="1dp"/>


    </LinearLayout>

</LinearLayout>